@model Nop.Plugin.Themes.NopGadget.Areas.Admin.Models.ThemeGadgetSettingsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="card">
    <div class="card-body">
        <form asp-action="Configure" method="post">
            <div class="form-group">
                <label asp-for="PrimaryColor"></label>
                <input asp-for="PrimaryColor" class="form-control" type="color" />
            </div>

            <div class="form-group">
                <label asp-for="LogoPath"></label>
                <input asp-for="LogoPath" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="EnableCustomCss"></label>
                <input asp-for="EnableCustomCss" class="form-check-input" type="checkbox" />
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
