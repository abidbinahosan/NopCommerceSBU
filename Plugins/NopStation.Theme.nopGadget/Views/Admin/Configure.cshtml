@model NopGadgetTheme.Models.Configuration.ThemeGadgetSettingsModel

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<form method="post" asp-action="Configure">
    <div class="form-group">
        <label asp-for="PrimaryColor"></label>
        <input asp-for="PrimaryColor" class="form-control" type="color" />
    </div>
    <div class="form-group">
        <label asp-for="LogoPath"></label>
        <input asp-for="LogoPath" class="form-control" />
        <small class="form-text text-muted">URL to logo image</small>
    </div>
    <div class="form-group form-check">
        <input asp-for="EnableCustomCss" class="form-check-input" />
        <label asp-for="EnableCustomCss" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
